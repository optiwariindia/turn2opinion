<style>
	@import "https://cdnjs.cloudflare.com/ajax/libs/font-awesome / 4.7.0/css/font-awesome.css";

	a {
		color: #fff;
		text-decoration: none;
		transform: scale(1.25);
		padding: 10px;
		transition: 1s;
	}

	a:hover {
		background-color: #888;
		text-decoration: none;
		transform: scale(1.25);
	}

	.logo-center {
		text-align: center;
	}

	body {
		background: rgba(76, 76, 76, 0.9);
	}

	.logo-center .logo {
		border-bottom: 1px solid #888;
		background: #fff;
		padding: 10px;
		float: left;
		border-radius: 20px;
		box-shadow: 0 0 20px;
		margin-left: 50%;
		transform: translateX(-50%);
	}

	.msg-body {
		background: rgba(76, 76, 76, 0.9);
		color: #fff;
		padding: 30px;
		float: left;
	}

	.logo-center .punchline {
		width: 100%;
		float: left;
		font-size: 30px;
		margin-top: 20px;
	}

	.message {
		width: calc(100%-40px);
		float: left;
		text-align: justify;
		line-height: 30px;
		margin-top: 30px;
		font-size: 20px;
		padding: 20px;
	}

	.signature {
		width: 100%;
		float: left;
		margin-top: 30px;
	}

	.signature .logo {
		background: #fff;
		float: left;
		padding: 10px;
		border-radius: 10px;
		box-shadow: 0 0 10px;
	}

	.signature .name {
		margin-top: 60px;
		width: 200;
		text-align: left;
	}

	.signature .social ul {
		list-style: none;
		display: flex;
	}

	.signature .social ul li {
		margin: 0 0 0 10px;
	}
</style>

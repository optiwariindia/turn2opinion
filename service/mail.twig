            box-sizing: border-box;
            background-color: #eee;
            font-family: sans-serif;
            color: #222;
            font-size: 14px;
            line-height: 1.4;
        }

        .wrapper {
            width: 100%;
            table-layout: fixed;
            background-color: #eee;
            padding-bottom: 40px;
        }

        .wrapper .inner {
            width: 100%;
            max-width: 700px;
            background-color: #fff;
            margin: 0 auto;
        }

        .email-table {
            margin: 0 auto;
            width: 100%;
            border-spacing: 0;
        }

        .col-one {
            text-align: center;
            padding: 15px;
        }

        .col-one h2 {
            font-size: 18px;
            font-weight: 600;
            text-transform: uppercase;
            padding-bottom: 10px;
        }

        .col-one p {
            font-size: 14px;
            line-height: 1.4;
        }

        .col-three {
            display: block;
            width: 100%;
            clear: both;
        }

        .col-three .col-one {
            width: 33.333%;
            float: left;
        }

        .bttn {
            display: inline-block;
            text-transform: uppercase;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            letter-spacing: 1px;
            background: #1a5089;
            color: #fff;
            padding: 12px 25px;
            transition: all 0.4s ease;
        }

        .bttn:hover {
            background: blue;
        }

        .col-two {
            display: block;
            width: 100%;
        }

        .col-two .menu,
        .col-two .social-menu {
            width: 50%;
            float: left;
        }

        .col-two ul {
            list-style: none;
            display: block;
            padding: 0;
            margin: 0;
        }

        .col-two ul li {
            display: inline-block;
            float: left;
            margin-right: 20px;
        }

        .col-two ul li a {
            color: #fff;
            text-transform: uppercase;
            font-size: 14px;
            text-decoration: none;
        }

        .col-two ul li:last-child {
            margin-right: 0;
        }

        .col-two .social-menu ul {
            float: right;
        }

        @media screen and (max-width: 600px) {
            .col-one {
                padding: 10px;
            }

            .col-two ul li {
                margin-right: 10px;
            }
        }

        @media screen and (max-width: 500px) {
            .col-one {
                padding: 10px;
            }

            .col-two ul li {
                margin-right: 10px;
            }

            .col-three .col-one {
                width: 100%;
            }

            .col-two .menu,
            .col-two .social-menu {
                width: 100%;
                padding: 10px 0;
                text-align: center;
            }

            .col-two .social-menu ul {
                float: left;
                width: 100%;
            }

            .col-two .menu ul li {
                width: 33.333%;
                margin: 0;
            }

            .col-two .social-menu ul li {
                margin: 0;
                width: 25%;
                float: left;
            }
        }
    </style>

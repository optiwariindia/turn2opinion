{% import "macro/form.twig" as form %}
<style>
	.mb-3.card {
		background: #174b84;
		color: #fff;
		font-weight: bold;
		/* background-image: linear-gradient(#174b84, #fff) */
	}

	.form-control,
	.form-control:disabled,
	.form-control:focus {
		background: #174b84;
		color: #fff;
		border-radius: 0;
		border: none;
		border-bottom: 1px solid #7f9ebf;
		transition: 1s;
	}
	.form-control:disabled {
		color: #aaa;
		font-size: 18px;
		text-transform: capitalize;
	}
	.form-control:hover,
	.form-control:focus {
		border: 1px solid #fff;
		box-shadow: 0 0 10px #fff;
	}
	.frm-grid {
		display: grid;
		grid-template-areas: "auto auto";
	}
	.frm {
		gap: 10px;
		font-size: 17px;
	}
	button.btn-primary {
		color: #174b84;
		background-color: #a0bfe2;
		border-color: #3f6ad8;
		font-size: 20px;
		font-weight: bold;
	}
	button.btn-primary:hover {
		transform: scale(1.25);
	}
</style>
<div class="mb-3 card">
	<div class="card-header-tab card-header">
		<div class="card-header-title font-size-lg text-capitalize font-weight-normal">
			<i class="header-icon lnr-cloud-download icon-gradient bg-happy-itmeo"></i>
			Earnings Curve
		</div>
	</div>
	<div class="card-body">
		<h5 class="card-title">Controls Types</h5>
		<form method="post">
			<div class="frm-grid">
				{% for item in user.basicpro[0] %}
					{% if item.type == "select" %}

						{{form.select(item.name,loop.index,item.options,user[item.value],item.fld)}}
					{% elseif item.type == "checkbox" %}
						{{form.checkbox(item.name,loop.index,item.options,user[item.value],item.fld)}}
					{% else %}
						{% set editable = false %}
						{% if user[item.value] is defined %}
						
							{% set editable = item.editable %}
						{% endif %}

						{{form.input(item.type,item.name,loop.index,user[item.value],item.fld,editable)}}
					{% endif %}
				{% endfor %}
			</div>
			<div class="frm">
				{% for item in user.basicpro[1] %}
					{% if item.type == "select" %}
						{{form.select(item.name,loop.index,item.options,item.value,item.fld)}}
					{% elseif item.type == "checkbox" %}
						{{form.checkbox(item.name,loop.index,item.options,item.value,item.fld)}}
					{% else %}


						{{form.input(item.type,item.name,loop.index,item.value,item.fld)}}
					{% endif %}
				{% endfor %}
			</div>
			<button class="mt-1 btn btn-primary fr">Submit</button>
		</form>
	</div>
</div>

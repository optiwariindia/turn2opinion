{% import "macro/form.twig" as form %}
<div class="mb-3 card">
	<div class="card-header-tab card-header">
		<div class="card-header-title font-size-lg text-capitalize font-weight-bold">
			<img src="/images/categories/{{page.icon}}" class='pageicon'>
			{{page.title}}
		</div>
		<div class="btn-actions-pane-right text-capitalize actions-icon-btn">
			<div class="btn-group dropdown">
				<button type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="btn-icon btn-icon-only btn btn-link">
					<i class="pe-7s-menu btn-icon-edit"></i>
				</button>
				<div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu-right rm-pointers dropdown-menu-shadow dropdown-menu-hover-link dropdown-menu">
					<h6 tabindex="-1" class="dropdown-header">Header</h6>
					<button type="button" tabindex="0" class="dropdown-item">
						<i class="dropdown-icon lnr-inbox"></i>
						<span>Menus</span>
					</button>
					<button type="button" tabindex="0" class="dropdown-item">
						<i class="dropdown-icon lnr-file-empty"></i>
						<span>Settings</span>
					</button>
					<button type="button" tabindex="0" class="dropdown-item">
						<i class="dropdown-icon lnr-book"></i>
						<span>Actions</span>
					</button>
					<div tabindex="-1" class="dropdown-divider"></div>
					<div class="p-3 text-right">
						<button class="mr-2 btn-shadow btn-sm btn btn-link">View Details</button>
						<button class="mr-2 btn-shadow btn-sm btn btn-primary">Action</button>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="card-body">
		<form method="post">
			<div class="row">

				{% for item in profile.questions %}
					{% set value = "" %}
					{% if ((user[item.name] is not defined) or (user[item.name] == "" )) %}
					{% else %}
						<div class="{{item.class}}">
							<span class='hidden' data-qno>{{loop.index}}</span>
							<span class='hidden' data-qid>{{item._id}}</span>
							{% set value = user[item.name] %}

							{% if edit is defined %}

								{% else %}
									<div class="form-group">
										<label for="">{{item.label[0].value}}</label>
										<div class="input">
											{% if value is iterable %}
												{% if value.label is defined %}
													{{value.label}}
												{% else %}
													{% for val in value %}
														{{val}}
													{% endfor %}
												{% endif %}
											{% else %}
												{{value}}
											{% endif %}
										</div>
									</div>
							{% endif %}
						</div>
					{% endif %}
				{% endfor %}
			</div>
			{# <button class="mt-1 btn btn-primary fr">Submit</button> #}
		</form>
	</div>
</div>

<div class="card">
	<div class="card-body">
		<ul class="list-group list-group-flush profile-list">
			{% for category in user.profileCategories %}
				<li class="p-3 bg-transparent list-group-item">
					<a href="/user/profile/{{category.target}}" class="widget-progress-wrapper profile">
						<img src="/images/categories/{{category.icon}}" alt="" srcset="">
						<div class="label-left" style='font-size:17px'>{{category.name}}</div>
						<div class="progress-bar-sm progress-bar-animated-alt progress" style='height:12px'>
							<div class="progress-bar bg-primary" role="progressbar" aria-valuenow="43" aria-valuemin="0" aria-valuemax="100" style="width: {{category.completed}}%;"></div>
						</div>
						
						<div class="progress-sub-label">
							<div class="sub-label-right">{{category.completed}}%</div>
						</div>
					</a>
				</li>
			{% endfor %}
			<div class="widget-content-outer" style='display:block'>
				<div class="widget-content p-0"></div>
			</div>
		</ul>
	</div>
</div>

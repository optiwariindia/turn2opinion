<div class="main-slider-container">
	<div class="owl-carousel main-slider">
		{% for slide in slider %}
			<div class="item">
				<div class="main-slide text-center">
					<div class="img-container">
					<picture>
						<source  srcset="/slider/slide{{loop.index}}.webp" type="image/webp">
						<source  srcset="/slider/slide{{loop.index}}.jpg" type="image/jpg">
						<img src="/slider/slide{{loop.index}}.jpg" alt="Slide-{{loop.index}}" class="img-fluid">
					  </picture>
					</div>
					<div class="text-container">
						<div class="banner-text">
							<h1>{{slide.h1}}</h1>
							<h2>{{slide.h2}}</h2>
							<p>{{slide.p}}</p>
						</div>

					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<div class="row">
		<div class="col-sm-7 col-lg-8"></div>
		<div class="col-sm-5 col-lg-4">
			{% if form is defined %}
				{% include "comp/"~form~".twig" %}
			{% else %}
				{% include "comp/auth.twig" %}
			{% endif %}
		</div>
	</div>

</div>

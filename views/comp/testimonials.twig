<div id="testimonials"></div>
<div id="fh5co-testimonial" class="fh5co-bg-section">
	<div class="container">
		<div class="row animate-box">
			<div class="col-md-6 col-md-offset-3 text-center fh5co-heading">
				<h2>Testimonials</h2>
			</div>
		</div>
		<div class="row">
			<div class="col-md-10 col-md-offset-1">
				<div class="row animate-box">
					<div class="owl-carousel owl-carousel-fullwidth">
						{% for testimonial in testimonials %}

							<div class="item">
								<div class="testimony-slide active text-center">
									<figure>
										<img src="/images/testimonials/user.webp" alt="user">
									</figure>
									<span>{{testimonial.name}}
										({{testimonial.country}})
									</span>
									<div class="comment-date" date-value="{{testimonial.date}}">{{testimonial.date}}</div>
									<blockquote>
										<p style='font-style:italic; font-size:12px;'>&ldquo;{{testimonial.comment}}&rdquo;</p>
									</blockquote>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
